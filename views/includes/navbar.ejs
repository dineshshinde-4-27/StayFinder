<style>
  .see-bookings {
    background-color: #efefef;
    border-radius: 20px;
  }
</style>

<nav class="navbar navbar-expand-md bg-white border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <!-- <i class="fa-regular fa-compass" title="StayFinder"></i> -->
      <img
        src="../../public/logo/StayFinder_logo.png"
        class="img-logo"
        title="StayFinder"
        alt=""
      />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings" title="You can see all hotels here"
          >See Hotel</a
        >
        <a
          class="nav-link create-form"
          href="/listings/new"
          title="You can add you hotel here"
          >Add Your Hotel</a
        >
        <a
          class="nav-link create-form see-bookings"
          href="/bookings"
          title="You can add you hotel here"
          >See Bookings</a
        >
      </div>
      <form method="GET" action="/listings" class="d-flex m-auto" role="search">
        <input
          class="form-control me-2 rounded-5"
          type="search"
          placeholder="Search"
          aria-label="Search"
          name="country"
          required
        />
        <button
          class="btn btn-outline-danger search-btn-insider rounded-5"
          type="submit"
        >
          Search
        </button>
      </form>
      <div class="navbar-nav ms-auto">
        <% if (!currentUser){ %>
        <a
          class="nav-link"
          aria-current="page"
          href="/signup"
          title="If you don't have an account yet"
          >Sign Up</a
        >
        <a
          class="nav-link"
          href="/login"
          alert-info
          title="If you have an account"
          >Log In</a
        >
        <% } %> <% if (currentUser){ %>
        <span class="nav-link create-form" href=""
          ><%= currentUser.email %></span
        >
        <a class="nav-link create-form" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
